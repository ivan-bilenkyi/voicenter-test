{
    "root": false,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "plugin:@typescript-eslint/recommended",
        "plugin:nuxt/recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "vue/multi-word-component-names": [
            "off"
        ],
        "prettier/prettier": [
            "warn"
        ]
    }
}